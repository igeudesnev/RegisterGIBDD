<Window x:Name="RegisterGIBDD" x:Class="RegisterGIBDD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegisterGIBDD"
        mc:Ignorable="d"
        Title="GIBDDRegister" Height="550" Width="650">
    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,0,2,0">
        <Button x:Name="buttonAdding" Content="Add" HorizontalAlignment="Right" VerticalAlignment="Top" Width="140" Height="60" Click="buttonAdding_Click" Margin="0,10,10,0"/>
        <Button x:Name="buttonDelete" Content="Delete chosen element" HorizontalAlignment="Right" Margin="0,140,10,0" VerticalAlignment="Top" Width="140" Height="60" Click="buttonDelete_Click" RenderTransformOrigin="0.539,0.775"/>
        <Button x:Name="buttonEdit" Content="Edit chosen element" HorizontalAlignment="Right" Margin="0,75,10,0" VerticalAlignment="Top" Width="140" Height="60" Click="buttonEdit_Click"/>
        <DataGrid x:Name="dataGridDrivers" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,10,155,10"/>

    </Grid>
</Window>
